# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here-generate-a-new-one
DEBUG=True
DJANGO_SETTINGS_MODULE=FarmManagerSystem.settings

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# Options: sqlite3, postgresql, mysql
DB_ENGINE=sqlite3

# PostgreSQL Configuration (if DB_ENGINE=postgresql)
DB_NAME=cowsville
DB_USER=your_db_user
DB_PASSWORD=your_db_password
DB_HOST=localhost
DB_PORT=5432

# MySQL Configuration (if DB_ENGINE=mysql)
# DB_NAME=cowsville
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=3306

# CORS Settings (comma-separated)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Security Settings (for production)
SECURE_SSL_REDIRECT=False

# SMS/Alert System (Afromessage API)
AFROMESSAGE_API_TOKEN=your_afromessage_api_token
AFROMESSAGE_SENDER_NAME=Cowsville
